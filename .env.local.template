# POSPal Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ==============================================
# STRIPE CONFIGURATION
# ==============================================
# Get these from your Stripe Dashboard at https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Production keys (uncomment when ready for production)
# STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here  
# STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
# STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# ==============================================
# CLOUDFLARE CONFIGURATION  
# ==============================================
# Get these from your Cloudflare Dashboard
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_WORKER_URL=https://your-worker.your-subdomain.workers.dev

# Database (Cloudflare D1)
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id_here

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
# Choose your email service provider
EMAIL_SERVICE=mailgun  # or 'sendgrid', 'ses', 'smtp'

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your-domain.mailgun.org

# SendGrid Configuration (if using SendGrid)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Amazon SES Configuration (if using SES)
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1

# SMTP Configuration (if using custom SMTP)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASSWORD=your_smtp_password

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Flask Configuration
FLASK_SECRET_KEY=your_very_secure_random_secret_key_here_at_least_32_chars
FLASK_ENV=development  # or 'production'
DEBUG=true  # set to 'false' in production

# Application URLs
APP_BASE_URL=http://localhost:5000  # Change to your domain in production
FRONTEND_URL=http://localhost:3000  # If using separate frontend

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# License Validation
LICENSE_VALIDATION_SECRET=your_license_validation_secret_here
HARDWARE_ID_SALT=your_hardware_id_salt_here

# Session Management
SESSION_TIMEOUT=3600  # Session timeout in seconds (1 hour)
MAX_LOGIN_ATTEMPTS=5  # Maximum failed login attempts before lockout

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60  # API requests per minute per IP
RATE_LIMIT_PER_HOUR=1000  # API requests per hour per IP

# ==============================================
# DATABASE CONFIGURATION (if using additional databases)
# ==============================================
# PostgreSQL (if needed for additional data)
# DATABASE_URL=postgresql://username:password@localhost:5432/pospal

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379/0

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Log Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# External Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here

# ==============================================
# DEVELOPMENT/TESTING CONFIGURATION
# ==============================================
# Test Mode Settings
ENABLE_TEST_MODE=true  # Set to false in production
TEST_WEBHOOK_URL=https://webhook.site/your-test-webhook-id

# Debug Settings (development only)
FLASK_DEBUG_MODE=true  # Set to false in production
ENABLE_CORS=true  # Enable CORS for development

# ==============================================
# FEATURE FLAGS
# ==============================================
# Feature toggles for gradual rollout
ENABLE_NEW_CHECKOUT=true
ENABLE_SUBSCRIPTION_MANAGEMENT=true
ENABLE_REFUND_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ==============================================
# NOTES
# ==============================================
# 1. Generate secure random values for all secrets
# 2. Use different values for development/staging/production
# 3. Rotate secrets regularly (every 90 days recommended)
# 4. Store production secrets in secure key management system
# 5. Never share or commit actual secret values